pipeline {
    agent any

    tools {
        maven 'maven 3.9'   // updated to match your Jenkins Global Tool name
        jdk 'jdk17'          // must match the JDK name you configured in Jenkins
    }

    environment {
        JAVA_HOME = "${tool 'jdk17'}"
        MAVEN_HOME = "${tool 'maven 3.9'}"
        PATH = "${JAVA_HOME}/bin;${MAVEN_HOME}/bin;%PATH%"

        SPRING_PROFILES_ACTIVE = "dev"
        APP_NAME = "springboot-crud-h2"
        APP_VERSION = "0.0.1-SNAPSHOT"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Checking out source code from GitHub...'
                checkout scm
            }
        }

        stage('Verify Tools') {
            steps {
                echo 'üîç Verifying Java and Maven'
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Build & Unit Tests') {
            steps {
                echo 'üèóÔ∏è Building project and running unit tests...'
                bat 'mvn clean package -DskipTests=false'
            }
        }

        stage('Integration Tests') {
            steps {
                echo 'üß™ Running Integration Tests...'
                bat 'mvn verify -Pintegration'
            }
        }

        stage('Staging Deployment') {
            when {
                branch 'develop'
            }
            steps {
                echo 'üöÄ Deploying build to STAGING environment...'
                bat "java -jar target\\${APP_NAME}-${APP_VERSION}.jar --spring.profiles.active=staging"
            }
        }

        stage('Approval for Production') {
            when {
                branch 'main'
            }
            steps {
                script {
                    timeout(time: 2, unit: 'HOURS') {
                        input message: "Approve deployment to PRODUCTION?"
                    }
                }
            }
        }

        stage('Production Deployment') {
            when {
                branch 'main'
            }
            steps {
                echo 'üöÄ Deploying build to PRODUCTION environment...'
                bat "java -jar target\\${APP_NAME}-${APP_VERSION}.jar --spring.profiles.active=prod"
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check logs!'
        }
        always {
            echo 'üßπ Cleaning workspace...'
            cleanWs()
        }
    }
}
