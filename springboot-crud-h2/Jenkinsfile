pipeline {
    agent any
    stages {
        stage('Check PATH') {
            steps {
                bat 'echo %PATH%'
                bat 'where cmd'
                bat 'java -version'
                bat 'mvn -version'
            }
        }
    }
}
pipeline {
    agent any

    tools {
        maven 'maven 3.9'
        jdk 'jdk17'
    }

    environment {
        JAVA_HOME = "${tool 'jdk17'}"
        MAVEN_HOME = "${tool 'maven 3.9'}"
        PATH = "${JAVA_HOME}\\bin;${MAVEN_HOME}\\bin;%PATH%"

        SPRING_PROFILES_ACTIVE = "dev"
        APP_NAME = "springboot-crud-h2"
        APP_VERSION = "0.0.1-SNAPSHOT"
    }

    stages {

        stage('Test Environment') {
            steps {
                echo "üîß Verifying PATH and tools"
                bat 'echo %PATH%'
                bat 'where cmd'
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Checkout') {
            steps {
                echo 'üì• Checking out source code from GitHub...'
                checkout scm
            }
        }

        stage('Build & Unit Tests') {
            steps {
                echo 'üèóÔ∏è Building Spring Boot project and running unit tests...'
                bat 'mvn clean package'
            }
        }

        stage('Integration Tests') {
            steps {
                echo 'üß™ Running Integration Tests (if any)...'
                // Uncomment and configure if you have integration tests
                // bat 'mvn verify -Pintegration'
            }
        }

        stage('Staging Deployment') {
            when {
                branch 'develop'
            }
            steps {
                echo 'üöÄ Deploying to STAGING environment...'
                bat """
                java -jar target\\${APP_NAME}-${APP_VERSION}.jar --spring.profiles.active=staging
                """
            }
        }

        stage('Approval for Production') {
            when {
                branch 'main'
            }
            steps {
                script {
                    timeout(time: 2, unit: 'HOURS') {
                        input message: "‚úÖ Approve deployment to PRODUCTION?"
                    }
                }
            }
        }

        stage('Production Deployment') {
            when {
                branch 'main'
            }
            steps {
                echo 'üöÄ Deploying to PRODUCTION environment...'
                bat """
                java -jar target\\${APP_NAME}-${APP_VERSION}.jar --spring.profiles.active=prod
                """
            }
        }
    }

    post {
        success {
            echo 'üéâ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check logs.'
        }
    }
}
